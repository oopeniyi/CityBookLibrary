@model Entities.Models.BorrowTransaction


@{
    ViewData["Title"] = "Details";
}



<div>
    <h4>Catalog CheckOut</h4>
    <hr />

    @if (ViewBag.Status.Equals("ExistingCheckeout"))
    {
            <div class="alert alert-danger" role="alert">The selected Item is not available for checkout. See details below</div>
    }
    else @if (ViewBag.Status.Equals("NewCheckout"))
    {
            <div class="alert alert-success" role="alert">Item checked out successfully</div>
    }

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ID)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ID)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.BorrowerFullName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.BorrowerFullName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.BorrowedDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.BorrowedDate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ExpectedReturnDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ExpectedReturnDate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.IssuedBy)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.IssuedBy)
    </dd>


</dl>
</div>
<div class="float-right">    
    <a asp-action="Index" asp-controller="Book" class="btn btn-success">Back to List</a>
</div>
